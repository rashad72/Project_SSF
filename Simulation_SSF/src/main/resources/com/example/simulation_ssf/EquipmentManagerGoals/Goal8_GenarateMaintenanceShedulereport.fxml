<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.example.simulation_ssf.Controller.FXMLControllerForUser5.EM_Goal8_Controller">

    <!-- Equipment ID -->
    <Label layoutX="20" layoutY="20" text="Equipment ID:" />
    <TextField fx:id="equipmentIDTF" layoutX="150" layoutY="20" prefWidth="150" />

    <!-- Equipment Name -->
    <Label layoutX="320" layoutY="20" text="Equipment Name:" />
    <TextField fx:id="equipmentNameTF" layoutX="450" layoutY="20" prefWidth="120" />

    <!-- Type -->
    <Label layoutX="20" layoutY="60" text="Type:" />
    <ComboBox fx:id="typeCB" layoutX="150" layoutY="60" prefWidth="150" />

    <!-- Quantity -->
    <Label layoutX="320" layoutY="60" text="Quantity:" />
    <TextField fx:id="quantityTF" layoutX="450" layoutY="60" prefWidth="120" />

    <!-- Status -->
    <Label layoutX="20" layoutY="100" text="Status:" />
    <ComboBox fx:id="statusCB" layoutX="150" layoutY="100" prefWidth="150" />

    <!-- Assigned Team -->
    <Label layoutX="320" layoutY="100" text="Assigned Team:" />
    <TextField fx:id="assignedTeamTF" layoutX="450" layoutY="100" prefWidth="120" />

    <!-- Last Maintenance Date -->
    <Label layoutX="20" layoutY="140" text="Last Maintenance Date:" />
    <DatePicker fx:id="lastMaintenanceDP" layoutX="150" layoutY="140" prefWidth="150" />

    <!-- Usage Duration -->
    <Label layoutX="320" layoutY="140" text="Usage Duration:" />
    <TextField fx:id="usageDurationTF" layoutX="450" layoutY="140" prefWidth="120" />

    <!-- Assigned Unit -->
    <Label layoutX="20" layoutY="180" text="Assigned Unit:" />
    <TextField fx:id="assignedUnitTF" layoutX="150" layoutY="180" prefWidth="150" />

    <!-- Minimum Required -->
    <Label layoutX="320" layoutY="180" text="Minimum Required:" />
    <TextField fx:id="minimumRequiredTF" layoutX="450" layoutY="180" prefWidth="120" />

    <!-- Last Updated -->
    <Label layoutX="20" layoutY="220" text="Last Updated:" />
    <DatePicker fx:id="lastUpdatedDP" layoutX="150" layoutY="220" prefWidth="150" />

    <!-- Next Maintenance Date -->
    <Label layoutX="320" layoutY="220" text="Next Maintenance Date:" />
    <DatePicker fx:id="nextMaintenanceDP" layoutX="450" layoutY="220" prefWidth="120" />

    <!-- Technician -->
    <Label layoutX="20" layoutY="260" text="Technician:" />
    <TextField fx:id="technicianTF" layoutX="150" layoutY="260" prefWidth="150" />

    <!-- Buttons -->
    <Button layoutX="150" layoutY="300" onAction="#saveButtonOnAction" prefWidth="100" text="Save" />
    <Button layoutX="300" layoutY="300" onAction="#cancelButtonOnAction" prefWidth="100" text="Cancel" />
   <Label fx:id="output1" layoutX="116.0" layoutY="360.0" prefHeight="127.0" prefWidth="435.0" text="Label" />

</AnchorPane>
