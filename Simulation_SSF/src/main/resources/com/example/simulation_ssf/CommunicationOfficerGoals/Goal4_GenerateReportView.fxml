<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CONTROLLER_NAME">
    <children>
        <Label layoutX="202.0" layoutY="14.0" style="-fx-background-color: Cyan;" text="Communication Summary Report">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <DatePicker fx:id="exportStartDatePicker" layoutX="136.0" layoutY="56.0" />
        <DatePicker fx:id="exportEndDatePicker" layoutX="379.0" layoutY="56.0" />
        <TableView fx:id="summaryReportTableView" layoutX="13.0" layoutY="148.0" prefHeight="138.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="sentTableColumn" prefWidth="167.0" text="Sent" />
                <TableColumn fx:id="receivedTableColumn" prefWidth="145.0" text="Received" />
                <TableColumn fx:id="pendingTableColumn" prefWidth="129.0" text="Pending" />
                <TableColumn fx:id="failedTableColumn" prefWidth="130.0" text="Failed" />
            </columns>
        </TableView>
        <ComboBox fx:id="reportTypeCB" layoutX="136.0" layoutY="94.0" prefWidth="150.0" />
        <Button layoutX="384.0" layoutY="94.0" mnemonicParsing="false" onAction="#generateReportButtonOnAction" prefHeight="25.0" prefWidth="150.0" text="Generate Report" />
        <Button layoutX="263.0" layoutY="361.0" mnemonicParsing="false" onAction="#backToDashboardButtonOnAction" text="Dashboard" />
        <Label layoutX="53.0" layoutY="60.0" text="Report From:" />
        <Label layoutX="351.0" layoutY="60.0" text="To:" />
        <Label layoutX="58.0" layoutY="98.0" text="Report type:" />
      <Button layoutX="256.0" layoutY="295.0" mnemonicParsing="false" onAction="#exportButtonOnAction" text="Export as PDF" />
      <Label fx:id="exportStatusLabel" layoutX="180.0" layoutY="330.0" prefHeight="17.0" prefWidth="213.0" />
    </children>
</AnchorPane>
